<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/userLogged') %>

<% if (locals.successMessage) { %>
    <script>
        alertify.success('Contraseña restablecida con éxito');
    </script>
<% } %>

<div class="divLogin">
    <h3 class="title1">Restablecer contraseña</h3>

<form action="/users/restore-password" method="POST" name="formChangePassword" class="form1" >

    <div>
        <input type="text" name="email" placeholder="Email del usuario" class="input1 <%= locals.errors && errors.email ? 'isInvalid' : null %>" >
        <div class="divError1">
            <% if (locals.errors && errors.email) { %>
                <%= errors.email.msg %> 
            <% } %>
        </div>
    </div>

    <div class="divCss1">
        <button type="submit" class="button1 button3">Restablecer</button>
    </div>
</form>

</div>



