<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/userLogged') %>

<% if (locals.successMessage) { %>
    <script>
        alertify.success('Ejercicio creado con éxito');
    </script>
<% } %>

<div class="mainTitle">CREAR EJERCICIO</div>

<div class="mainContent">    

    <form action="/simulators/create-exercise" method="POST" name="formCreateExercise" class="form1">

        <div class="divInputsColumn">
            <div class="divInput mtl">
                <label class="label1 fwb">Simulador</label>
                <select name="selectSimulator" class="input2 sXL <%= locals.errors && errors.selectSimulator ? 'isInvalid' : null %>">
                    <option value="default" selected></option>
                    <% simulators.forEach(simulator => { %>
                        <option value="<%= simulator.id %>" <%= locals.oldData && oldData.selectSimulator == simulator.id ? 'selected' : null %>><%= simulator.simulator_name %></option>
                    <% }) %>
                </select>
                <div class="divError1">
                    <% if (locals.errors && errors.selectSimulator) { %>
                        <%= errors.selectSimulator.msg %>
                    <% } %>
                </div>
            </div>
            <div class="divInput mtxs">
                <label class="label1 fwb">Nombre del ejercicio</label>
                <input type="text" name="exerciseName" class="input2 iXL <%= locals.errors && errors.exerciseName ? 'isInvalid' : null %>" value="<%= locals.oldData ? oldData.exerciseName : null %>">
                <div class="divError1">
                    <% if (locals.errors && errors.exerciseName) { %>
                        <%= errors.exerciseName.msg %>
                    <% } %>
                </div>
            </div>
            <div class="divInput mtxs">
                <label class="label1 fwb">Descripción del ejercicio</label>
                <input type="text" name="exerciseDescription" class="input2 iXL <%= locals.errors && errors.exerciseDescription ? 'isInvalid' : null %>" value="<%= locals.oldData ? oldData.exerciseDescription : null %>">
                <div class="divError1">
                    <% if (locals.errors && errors.exerciseDescription) { %>
                        <%= errors.exerciseDescription.msg %>
                    <% } %>
                </div>
            </div>

        </div>
        
        <div class="mtl">
            <input type="submit" value="Crear" class="button1 bm">
            <!---<input type="button" value="Cancelar" onclick="window.location.href='/users/profile'" class="button1">--->
        </div>
    </form>

</div>



